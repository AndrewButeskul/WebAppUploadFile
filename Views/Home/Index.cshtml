@model Form
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mb-5">
    <h2 class="display-5">File Upload</h2>    
</div>
<div class="container">
    <form asp-controller="FileUpload" asp-action="Upload" class="post" enctype="multipart/form-data">
        <div class="mb-3">
            <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" name="email" placeholder="example@gmail.com"/>
                    <span asp-validation-for="Email"></span>
            </div>        
            <div class="mb-3">
                <label class="form-label">Upload file (only '.docx')</label>
                <input type="file" name="file" class="form-control" accept=".docx,.doc"/>
            </div>        
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
